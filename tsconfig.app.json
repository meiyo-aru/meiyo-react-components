{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    // REMOVA OU COMENTE ESTA LINHA: "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    // *** ADICIONE ESTAS LINHAS PARA GERAR AS DECLARAÇÕES DE TIPO ***
    "declaration": true,          // Permite a geração de arquivos .d.ts
    "declarationMap": true,       // Gera arquivos de mapa para os .d.ts (útil para depuração)
    "emitDeclarationOnly": true,  // Garante que o tsc *apenas* gere os .d.ts, sem gerar JS
    "outDir": "./dist"            // Onde o tsc irá colocar os arquivos .d.ts gerados
    // ***************************************************************
  },
  "include": ["src"]
}